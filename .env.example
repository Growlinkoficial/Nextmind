# NextMind Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== API Keys (BYOK - Bring Your Own Key) =====
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter (optional)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===== Local Models =====
# Ollama base URL (if using local models)
OLLAMA_BASE_URL=http://localhost:11434

# LM Studio base URL (if using local models)
LMSTUDIO_BASE_URL=http://localhost:1234

# ===== Database =====
# SQLite database path (relative to project root)
DATABASE_PATH=.tmp/data/nextmind.db

# ===== Logging =====
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===== Application Settings =====
# Default provider: openai, anthropic, google, openrouter, ollama
DEFAULT_PROVIDER=openai

# Default model
DEFAULT_MODEL=gpt-4
